<?xml version="1.0" encoding="utf-8"?>

<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:id="@+id/swipeMenuLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="@dimen/dp60"
    android:layout_height="@dimen/dp96"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp72"
    android:background="@color/color_181B2C"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"


    >

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_ff32395e_bg"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"


        >

        <ImageView
            android:id="@+id/icon_pay"
            android:layout_width="@dimen/dp23"
            android:layout_height="@dimen/dp23"
            android:src="@mipmap/icon_wx"
            android:layout_marginTop="@dimen/dp15"

            />


        <TextView
            android:id="@+id/pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp14"
            android:layout_marginTop="@dimen/dp15"
            android:layout_toRightOf="@+id/icon_pay"
            android:layout_marginLeft="@dimen/dp10"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textColor="@color/color_ffc3cdff"
            android:textSize="@dimen/dp12"
            android:layout_below="@+id/pay_name"
            android:layout_marginLeft="@dimen/dp45"
            android:layout_marginTop="@dimen/dp10"

            />


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            />


        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp11"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nickname"
            android:layout_marginTop="@dimen/dp10"
            />


    </RelativeLayout>
</RelativeLayout>

        <View android:layout_width="@dimen/dp2"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_address_detail"
            android:textSize="@dimen/dp13"
            android:layout_width="@dimen/dp75"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round_solid_no_rightcorner_ff5755_5"
            android:text="@string/str_c2c_active_cancel"
            android:textColor="@color/color_FFFFFF"/>

        <View android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_delete_address"
            android:textSize="@dimen/dp13"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_width="@dimen/dp75"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round_solid_no_rightcorner_ff9d34_5"
            android:clickable="true"
            android:text="@string/str_c2c_del"
            android:textColor="@color/color_FFFFFF"/>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>