<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:windowSoftInputMode="adjustPan"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.cjwsc.idcm.widget.NavigateTabBar
        android:id="@+id/home_navigate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        app:containerId="@+id/main_container"
        app:navigateTabSelectedTextColor="#2a82e4"
        app:navigateTabTextColor="#ACB6C7"
        android:background="@color/color_181B2C"

        />
</LinearLayout>
