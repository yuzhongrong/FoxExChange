<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp145"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fl_groupbybenefit_img"
        android:layout_width="@dimen/dp138"
        android:layout_height="@dimen/dp138"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5">

        <ImageView
            android:id="@+id/iv_groupbybenefit_commodity"
            android:layout_width="@dimen/dp138"
            android:layout_height="@dimen/dp138"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_groupbybenefit_commodity"
            android:layout_marginTop="@dimen/dp20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="拼团"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10"
            android:background="@mipmap/icon_group_bg"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_groupbybenefit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fl_groupbybenefit_img"
        android:layout_marginTop="@dimen/dp25"
        android:layout_toRightOf="@id/fl_groupbybenefit_img"
        android:text=""
        android:textColor="@color/color_333333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_groupbybenefit_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_groupbybenefit_name"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toRightOf="@id/fl_groupbybenefit_img"
        android:lines="3"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp12" />


    <TextView
        android:id="@+id/tv_groupbybenefit_num"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_toRightOf="@id/fl_groupbybenefit_img"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp10" />
    <LinearLayout
        android:id="@+id/ll_groupbybenefit_prcie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp34"
        android:layout_toRightOf="@id/fl_groupbybenefit_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_groupbybenefit_prcie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16.80 元/斤"
            android:textColor="@color/color_e88272"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_groupbybenefit_prcie_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:text="参团价"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp10" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_groupbybenefit_addcart"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp21"
        android:layout_marginRight="@dimen/dp20"
        android:src="@mipmap/icon_groupby"
        android:scaleType="centerCrop" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_e1e1e1"/>
</RelativeLayout>