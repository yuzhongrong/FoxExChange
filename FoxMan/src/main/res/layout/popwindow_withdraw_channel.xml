<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#66000000"
              android:orientation="vertical">

    <View
        android:id="@+id/view_shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp25"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提现方式"
                android:textColor="@color/color_111111"
                android:textSize="@dimen/sp16"/>

            <ImageView
                android:clickable="true"
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp5"
                android:src="@mipmap/ic_close"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_chooser_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp20"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/dp21">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_commodity_payment_zfb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="支付宝支付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp14"/>

            <View
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cb_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_bg_check_state"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_chooser_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp20"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/dp21">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_commodity_payment_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="微信支付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp14"/>

            <View
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cb_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_bg_check_state"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/shape_round_gradient_fe8483_e88272"
            android:gravity="center"
            android:paddingBottom="@dimen/dp16"
            android:paddingTop="@dimen/dp16"
            android:text="确定"
            android:textColor="@color/color_ffffff"/>
    </LinearLayout>
</LinearLayout>