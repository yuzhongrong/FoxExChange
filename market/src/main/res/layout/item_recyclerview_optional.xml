<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:id="@+id/swipeMenuLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="@dimen/dp60"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">
    <RelativeLayout
        android:background="@drawable/item_added_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp60"
        >
        <TextView
            android:id="@+id/tv_coin_type"
            android:layout_marginTop="@dimen/dp13"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_width="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp15"
            android:text="USDT/"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/tv_coin_type"
            android:layout_marginTop="@dimen/dp13"
            android:layout_width="wrap_content"
            android:textColor="@color/color_C3CDFF"
            android:textSize="@dimen/dp12"
            android:text="GSG"
            android:layout_alignBottom="@+id/tv_coin_type"
            android:layout_height="wrap_content"/>
       <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp185"
            android:layout_marginTop="@dimen/dp14"
            android:id="@+id/tv_coin_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.05694"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_FF5755"
            />
         <Button
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp21"
             android:layout_centerVertical="true"
            android:text="+1.11%"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp11"
             android:background="@drawable/btn_uppercent_bg"
            />
        <TextView
            android:id="@+id/tv_day_tradenum"
            android:layout_below="@+id/tv_coin_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_trade_total"
            android:textSize="@dimen/dp12"
            android:layout_marginTop="@dimen/dp9"
            android:textColor="@color/color_ffffff"
            android:layout_marginLeft="@dimen/dp13"

            />
        <TextView
            android:layout_below="@+id/tv_coin_type"
            android:layout_toRightOf="@+id/tv_day_tradenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,344万元"
            android:textSize="@dimen/dp12"
            android:layout_marginTop="@dimen/dp9"
            android:textColor="@color/color_ffffff"
            />

        <TextView
            android:layout_below="@+id/tv_coin_type"
            android:layout_marginTop="@dimen/dp9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 6.90125"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp185"
            android:textColor="@color/color_c3cdff"
            android:textSize="@dimen/dp12"
            />
        <View
            android:layout_below="@+id/tv_day_tradenum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp13"
            />
    </RelativeLayout>
    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <View
        android:layout_width="@dimen/dp5"
        android:layout_height="match_parent"
        />
    <Button
        android:textSize="@dimen/dp13"
        android:layout_marginEnd="@dimen/dp5"
        android:id="@+id/btn_unselect"
        android:layout_width="@dimen/dp75"
        android:layout_height="match_parent"
        android:background="@drawable/btn_add_unadded"
        android:text="取消\n自选"
        android:textColor="@color/color_ffffff"/>
    <View
        android:layout_width="@dimen/dp1"
        android:layout_height="match_parent"
        />
    <Button
        android:textSize="@dimen/dp13"
        android:layout_marginLeft="@dimen/dp1"
        android:id="@+id/btn_totop"
        android:layout_width="@dimen/dp75"
        android:layout_height="match_parent"
        android:background="@drawable/btn_to_top"
        android:clickable="true"
        android:text="置顶"
        android:textColor="@color/color_ffffff"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>