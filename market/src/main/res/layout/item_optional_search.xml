<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_added_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp60"
    >
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp13"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_coin_type"
            android:layout_width="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp15"
            android:text="USDT/"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_C3CDFF"
            android:textSize="@dimen/dp12"
            android:text="GSG"
            android:layout_alignBottom="@+id/tv_coin_type"
            android:layout_height="wrap_content"/>
    </LinearLayout>
      <Button
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="@dimen/dp12"
         android:layout_width="@dimen/dp60"
         android:layout_height="@dimen/dp28"
          android:layout_centerVertical="true"
         android:text="@string/btn_add_optional"
         android:textColor="@color/color_ffffff"
         android:textSize="@dimen/dp13"
          android:background="@drawable/btn_uppercent_bg"
         />
</RelativeLayout>