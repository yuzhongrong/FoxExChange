<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        />
    <com.lqr.recyclerview.LQRRecyclerView
        android:id="@+id/recycler_view"
        app:rv_divider_size="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        app:rv_divider_color="@color/color_181B2C"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_noadded"
                android:layout_marginTop="@dimen/dp80"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_noadded"
                />
            <Button
                android:background="@drawable/btn_add_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:layout_below="@+id/iv_noadded"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp31"
                android:text="@string/add_toadded"
                android:textSize="@dimen/dp12"
                android:textColor="@color/color_0994FE"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>