<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_181B2C">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60">
            <ImageView
                android:id="@+id/iv_search_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp16"
                android:src="@mipmap/market_icon_back"
                android:scaleType="fitXY"
                />
            <EditText
                android:id="@+id/market_rxTextView"
                android:textColor="@color/color_6470A9"
                android:drawablePadding="@dimen/dp10"
                android:paddingStart="@dimen/dp8"
                android:drawableLeft="@mipmap/icon_search"
                android:background="@drawable/et_market_search"
                android:padding="@dimen/dp0"
                android:layout_centerVertical="true"
                android:hint="@string/search_cointype"
                android:textColorHint="@color/color_6470A9"
                android:textSize="@dimen/dp14"
                android:layout_marginLeft="@dimen/dp26"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp36" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp9"/>
        <com.lqr.recyclerview.LQRRecyclerView
            android:id="@+id/recycler_view"
            app:rv_divider_size="@dimen/dp10"
            app:rv_divider_color="@color/color_181B2C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>
