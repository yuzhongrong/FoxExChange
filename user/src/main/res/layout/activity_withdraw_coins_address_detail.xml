<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:padding="@dimen/dp15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_type_of_coins"
                android:textColor="@color/color_5E6683"
                android:textSize="@dimen/dp15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="UP"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@color/color_d5d5d5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_with_draw_address"
                android:textColor="@color/color_5E6683"
                android:textSize="@dimen/dp15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="sjafksaddkldjfkk"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@color/color_d5d5d5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_user_add_time"
                android:textColor="@color/color_5E6683"
                android:textSize="@dimen/dp15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="215648484484878"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@color/color_d5d5d5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_user_remark"
                android:textColor="@color/color_5E6683"
                android:textSize="@dimen/dp15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp135"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="left|top"
                android:textSize="@dimen/dp13"
                android:textCursorDrawable="@drawable/shape_edittext_cursor_bg"
                android:textColor="@color/color_333333"
                android:padding="@dimen/dp15"
                android:background="@drawable/shape_remark_bg"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>