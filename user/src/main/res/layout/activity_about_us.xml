<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp30"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/dp69"
            android:layout_height="@dimen/dp69"
            android:src="@mipmap/icon_logo"
            android:layout_marginTop="@dimen/dp49"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_666666"
            android:layout_marginTop="@dimen/dp5"
            android:text="Hetcoin v1.0"/>
    </LinearLayout>

    <View style="@style/gray_line"/>

    <RelativeLayout
        android:id="@+id/secret_policy_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View style="@style/gray_line"/>

    <RelativeLayout
        android:id="@+id/service_protocol_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_service_protocol"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View style="@style/gray_line"/>

    <RelativeLayout
        android:id="@+id/update_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_software_update"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_000000"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_7E7E7E"
            android:textSize="@dimen/dp15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp50"
            android:text="发现新版本,去更新"/>

        <TextView
            android:layout_width="@dimen/dp17"
            android:layout_height="@dimen/dp17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp25"
            android:text="1"
            android:textSize="@dimen/dp12"
            android:textColor="@color/color_FFFFFF"
            android:background="@mipmap/icon_notice_bg"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View style="@style/gray_line"/>

    <RelativeLayout
        android:id="@+id/connect_us_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_connect_us"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View style="@style/gray_line"/>

</LinearLayout>