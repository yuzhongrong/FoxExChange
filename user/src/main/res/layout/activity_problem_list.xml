<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/user_problem_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp34"
        android:paddingBottom="@dimen/dp8"
        app:tl_indicator_color="@color/color_0994fe"
        app:tl_indicator_corner_radius="@dimen/dp5"
        app:tl_indicator_height="@dimen/dp2"
        app:tl_indicator_width="@dimen/dp70"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_0994fe"
        app:tl_textUnselectColor="@color/color_333333"
        app:tl_textsize="@dimen/dp16"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_d5d5d5"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/user_problem_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>