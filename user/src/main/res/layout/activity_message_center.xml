<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/common_toolbar"
        />
    <RelativeLayout
        android:id="@+id/user_rl_notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp78">
        <ImageView
            android:id="@+id/user_iv_notification"
            android:src="@mipmap/icon_notification"
            android:layout_width="@dimen/dp43"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_centerVertical="true"
            android:scaleType="fitStart"
            android:layout_height="@dimen/dp40" />
        <TextView
            android:layout_toRightOf="@+id/user_iv_notification"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_user_notification"
            android:layout_marginTop="18dp"
            android:textSize="@dimen/dp16"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:layout_toRightOf="@+id/user_iv_notification"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号注册成功"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_666666"
            />
        <TextView
            android:layout_marginTop="@dimen/dp22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-09 18:00:00"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_999999"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_d5d5d5"
        android:layout_marginLeft="@dimen/dp15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp78">
        <ImageView
            android:id="@+id/user_iv_transaction_news"
            android:src="@mipmap/icon_transaction_news"
            android:layout_width="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp40" />
        <TextView
            android:layout_toRightOf="@+id/user_iv_transaction_news"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_user_transaction_news"
            android:layout_marginTop="18dp"
            android:textSize="@dimen/dp16"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:layout_toRightOf="@+id/user_iv_transaction_news"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="币币交易"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_666666"
            />
        <TextView
            android:layout_marginTop="@dimen/dp22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-09 18:00:00"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_999999"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_d5d5d5"
        android:layout_marginLeft="@dimen/dp15"
        />
</LinearLayout>
